{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "lib": ["dom", "esnext", "ES2022", "esnext.asynciterable"]
  },
  "exclude": ["node_modules", "dist", "examples"]
}
